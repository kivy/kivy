ShowcaseScreen:
	name: 'filechooser'
	fullscreen: True

	BoxLayout:
		size_hint_y: None
		height: '48dp'

		ToggleButton:
			text: 'List'
			state: 'down'
			group: 'filechooser'
			on_release: sm.transition.direction, sm.current = 'right', 'listview'

		ToggleButton:
			text: 'Icon'
			group: 'filechooser'
			on_release: sm.transition.direction, sm.current = 'left', 'iconview'

	ScreenManager:
		id: sm
		Screen:
			name: 'listview'
			FileChooserListView:
				id: listview

		Screen:
			name: 'iconview'
			FileChooserIconView:
				id: iconview
