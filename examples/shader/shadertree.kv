#:kivy 1.0
<ShaderWidget>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            texture: self.texture
            pos: self.pos
            size: self.size

<ScatterImage>:
    size: image.size
    Image:
        id: image
        source: root.source
        size: self.texture_size
