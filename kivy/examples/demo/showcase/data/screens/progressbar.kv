ShowcaseScreen:
    name: 'ProgressBar'

    Label:
        text: 'Progression: {}%'.format(int(pb.value))
        size_hint_y: None
        height: '48dp'

    ProgressBar:
        id: pb
        size_hint_x: .5
        size_hint_y: None
        height: '48dp'
        value: (app.time * 20) % 100.

